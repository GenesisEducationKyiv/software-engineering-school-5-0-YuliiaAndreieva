FROM golang:1.24-alpine

WORKDIR /app

# Copy go.mod and go.sum files
COPY services/weather-broadcast/go.mod go.mod
COPY services/weather-broadcast/go.sum go.sum

# Download dependencies
RUN go mod download

# Copy source code
COPY services/weather-broadcast/ ./

# Run tests
CMD ["go", "test", "-v", "./tests/..."] 