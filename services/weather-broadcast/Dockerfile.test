FROM golang:1.24-alpine

WORKDIR /app

COPY proto/ ./proto/
COPY shared/ ./shared/
COPY services/weather-broadcast/go.mod services/weather-broadcast/go.sum ./

RUN mkdir -p ../../shared && cp -r ./shared/* ../../shared/
RUN mkdir -p ../../proto && cp -r ./proto/* ../../proto/

COPY services/weather-broadcast/ ./

RUN go mod download
RUN go mod tidy

CMD ["go", "test", "-v", "./tests/..."]