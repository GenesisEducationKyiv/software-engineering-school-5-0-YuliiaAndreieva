FROM golang:1.24-alpine

WORKDIR /app

# Copy shared and proto modules
COPY proto/ ./proto/
COPY shared/ ./shared/
COPY services/weather-broadcast/go.mod services/weather-broadcast/go.sum ./

# Fix replace directives for Docker context
RUN awk '{gsub("../../proto", "./proto"); gsub("../../shared", "./shared"); print}' go.mod > go.mod.tmp && \
    mv go.mod.tmp go.mod

# Copy weather-broadcast service source code
COPY services/weather-broadcast/ ./

# Download dependencies
RUN go mod download
RUN go mod tidy

# Run tests
CMD ["go", "test", "-v", "./tests/..."] 